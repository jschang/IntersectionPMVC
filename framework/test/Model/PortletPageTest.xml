<!--
portlet-page
	- cell
	- row
row
cell 
	@width
	- rules | portlet | content-selector
rules
	@handler
portlet
	@id
	@backing
	@resource
content-selector
	@handler
-->
<portlet-page>
	<cell width="16">
		<portlet id="header" backing="Portlet_TemplatedContent">
			<property name="resource" value="vcr://content/header/header.templ"/>
		</portlet>
	</cell>
	<cell width="16">
		<portlet id="footer" backing="Portlet_TemplatedContent">
			<property name="resource" value="vcr://content/footer/footer.templ"/>
		</portlet>
	</cell>
</portlet-page>